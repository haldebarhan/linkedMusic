    "build": "pnpm migration:generate && tsc && mkdir -p dist/docs && cp src/docs/*.yml dist/docs/ && npm run migration:deploy",
    "start:dev": "npm run build && npm run dev",
    "migration:create": "npx prisma migrate dev --name schema-update --schema=./src/database/prisma/schema.prisma",
    "migration:deploy": "npx prisma migrate deploy --schema=./src/database/prisma/schema.prisma",
    "migration:status": "npx prisma migrate status --schema=./src/database/prisma/schema.prisma",
    "migration:reset": "npx prisma migrate reset --schema=./src/database/prisma/schema.prisma",
    "migration:generate": "npx prisma generate --schema=./src/database/prisma/schema.prisma",
